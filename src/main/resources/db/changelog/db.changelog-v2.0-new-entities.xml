<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!--
        V2.0 New Entities and Schema Changes
        Author: Transport Team
        Date: 2025-11-04
        Description: Add Customer entity, DeliveryHistory, and refactor Delivery to reference Customer
    -->

    <!-- Changeset 6: Create customers table -->
    <changeSet id="6-create-customers-table" author="transport-team">
        <comment>WHO: Transport Team, WHAT: Create customers table, WHEN: 2025-11-04</comment>
        <createTable tableName="customers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="preferred_time_slot" type="VARCHAR(50)"/>
            <column name="phone" type="VARCHAR(20)"/>
            <column name="email" type="VARCHAR(100)"/>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
        </createTable>
        <rollback>
            <dropTable tableName="customers"/>
        </rollback>
    </changeSet>

    <!-- Changeset 7: Create new deliveries table with customer reference -->
    <changeSet id="7-create-deliveries-table-v2" author="transport-team">
        <comment>WHO: Transport Team, WHAT: Create new deliveries table with customer reference, WHEN: 2025-11-04</comment>
        <createTable tableName="deliveries">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_delivery_customer" references="customers(id)"/>
            </column>
            <column name="specific_address" type="VARCHAR(500)"/>
            <column name="specific_latitude" type="DOUBLE"/>
            <column name="specific_longitude" type="DOUBLE"/>
            <column name="weight_kg" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="volume_m3" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="preferred_time_slot" type="VARCHAR(50)"/>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="tour_id" type="BIGINT">
                <constraints foreignKeyName="fk_delivery_tour_v2" references="tours(id)"/>
            </column>
            <column name="sequence_in_tour" type="INT"/>
        </createTable>
        <rollback>
            <dropTable tableName="deliveries"/>
        </rollback>
    </changeSet>

    <!-- Changeset 8: Add tour status and timing columns -->
    <changeSet id="8-add-tour-status-columns" author="transport-team">
        <comment>WHO: Transport Team, WHAT: Add status, start_time, completion_time to tours, WHEN: 2025-11-04</comment>
        <addColumn tableName="tours">
            <column name="status" type="VARCHAR(20)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIMESTAMP"/>
            <column name="completion_time" type="TIMESTAMP"/>
        </addColumn>
        <rollback>
            <dropColumn tableName="tours" columnName="status"/>
            <dropColumn tableName="tours" columnName="start_time"/>
            <dropColumn tableName="tours" columnName="completion_time"/>
        </rollback>
    </changeSet>

    <!-- Changeset 9: Create delivery_history table -->
    <changeSet id="9-create-delivery-history-table" author="transport-team">
        <comment>WHO: Transport Team, WHAT: Create delivery_history table for AI analysis, WHEN: 2025-11-04</comment>
        <createTable tableName="delivery_history">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="delivery_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="day_of_week" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_history_customer" references="customers(id)"/>
            </column>
            <column name="customer_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="delivery_address" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="tour_id" type="BIGINT">
                <constraints foreignKeyName="fk_history_tour" references="tours(id)"/>
            </column>
            <column name="sequence_in_tour" type="INT"/>
            <column name="planned_time" type="TIME"/>
            <column name="actual_time" type="TIME"/>
            <column name="delay_minutes" type="INT"/>
            <column name="preferred_time_slot" type="VARCHAR(50)"/>
            <column name="weight_kg" type="DOUBLE"/>
            <column name="volume_m3" type="DOUBLE"/>
            <column name="delivery_status" type="VARCHAR(20)"/>
            <column name="vehicle_type" type="VARCHAR(20)"/>
            <column name="vehicle_registration" type="VARCHAR(50)"/>
            <column name="distance_from_warehouse_km" type="DOUBLE"/>
            <column name="distance_from_previous_delivery_km" type="DOUBLE"/>
            <column name="notes" type="VARCHAR(1000)"/>
        </createTable>
        <rollback>
            <dropTable tableName="delivery_history"/>
        </rollback>
    </changeSet>

    <!-- Changeset 10: Create indexes for V2 tables -->
    <changeSet id="10-create-indexes-v2" author="transport-team">
        <comment>WHO: Transport Team, WHAT: Create indexes on V2 tables for performance, WHEN: 2025-11-04</comment>
        <createIndex tableName="deliveries" indexName="idx_delivery_customer_v2">
            <column name="customer_id"/>
        </createIndex>
        <createIndex tableName="deliveries" indexName="idx_delivery_status_v2">
            <column name="status"/>
        </createIndex>
        <createIndex tableName="deliveries" indexName="idx_delivery_tour_v2">
            <column name="tour_id"/>
        </createIndex>
        <createIndex tableName="delivery_history" indexName="idx_history_customer">
            <column name="customer_id"/>
        </createIndex>
        <createIndex tableName="delivery_history" indexName="idx_history_date">
            <column name="delivery_date"/>
        </createIndex>
        <createIndex tableName="delivery_history" indexName="idx_history_day_of_week">
            <column name="day_of_week"/>
        </createIndex>
        <createIndex tableName="customers" indexName="idx_customer_active">
            <column name="active"/>
        </createIndex>
        <rollback>
            <dropIndex tableName="deliveries" indexName="idx_delivery_customer_v2"/>
            <dropIndex tableName="deliveries" indexName="idx_delivery_status_v2"/>
            <dropIndex tableName="deliveries" indexName="idx_delivery_tour_v2"/>
            <dropIndex tableName="delivery_history" indexName="idx_history_customer"/>
            <dropIndex tableName="delivery_history" indexName="idx_history_date"/>
            <dropIndex tableName="delivery_history" indexName="idx_history_day_of_week"/>
            <dropIndex tableName="customers" indexName="idx_customer_active"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
